/*
// con puntatori
int f(int &x) {
    &x = (&x)+1;
    return &x;
}
int main () {
    int x = 5, y = 7;
    y = f(&x);
    printf(" %i %i \n ", x,y); // stampa due interi, x e y, entrambi 6 perch√® viene aggiornato il valore di x
}
*/
/*
// con puntatori
int f(int &x) {
    &x = &(x+1); // il puntatore x+1 punta alla posizione in memoria successiva a x, potremmo trovaare y o a caso
    return &x;
}
int main () {
    int x = 5, y = 7;
    y = f(&x);
    printf(" %i %i \n ", x,y); // stampa due interi, x e y, entrambi 7 oppure un numero a caso
}
*/